/*======================================================  Utilizando o comando SELECT =======================================================================*/

/*visualisar tabela */
 SELECT*FROM tabelafornecedores;

/* visualisar tabela de uma coluna */

SELECT*FROM tabelafornecedores WHERE país_de_origem = 'China'; 

/* não ter clientes repetidos*/

select distinct cliente from tabelapedidos;

/*Criando tabelas - CREATE TABLE*/

CREATE table tabelaclientes (
id_clientes INT PRIMARY KEY,
Nome_Cliente VARCHAR (250),
informacoes_de_contato VARCHAR (250)
);

SELECT * FROM tabelaclientes;

/* Alterar tabela == Adic coluna */

alter table tabelaclientes add Endereço_cliente VARCHAR(250);

/* Apagar tabela */

DROP TABLE tabeladeclientes; //tambem para um bnaco de dados inteiro
